{% extends "layout.njk" %}

{% block head %}
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/recipes.css">
    <title>Receitas - Foodfy</title>
{% endblock %}


{% block content %}

<main>
    <section id="highlight">
        <img src="{{item.imgSource}}" alt="{{item.foodName}}">
        <h1 class="food-name">{{item.foodName}}</h1>
        <p class="cook">{{item.chef}}</p>
    </section>

    <section id="instructions"> 
        <div>
            <h2>Ingredientes <a class="show-link">Mostrar</a></h2>
            <p id="ingredient"></p>
        </div>
        <div>
            <h2>Modo de preparo <a class="show-link">Mostrar</a></h2>
            <p id="preparation"></p>
        </div>
        <div>
            <h2>Informações adicionais <a class="show-link">Mostrar</a></h2>
            <p id="info"></p>
        </div>
    </section>
   
</main>

<script src="server.js"></script>
{% endblock %}